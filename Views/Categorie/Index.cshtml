@model List<TP_CAISSE.ViewModel.CategorieViewModel>

<h2>Liste des Catégories</h2>

<table>
    <thead>
    <tr>
        <th>Nom</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Name</td>
            <td>
                <a href="@Url.Action("Details", "Categorie", new { id = category.Primarikey })">Détails</a> |
                <a href="@Url.Action("Edit", "Categorie", new { id = category.Primarikey })">Modifier</a> |
                <form method="post" action="@Url.Action("Delete", "Categorie", new { id = category.Primarikey })" style="display:inline;">
                    <button type="submit">Supprimer</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

<a href="@Url.Action("Create", "Categorie")">Ajouter une catégorie</a>